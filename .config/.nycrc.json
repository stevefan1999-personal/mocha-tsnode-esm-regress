{
  "all": true,
  "check-coverage": true,
  "esModules": true,
  "exclude": [
    "**/*.{d,test,spec}.[jt]s?(x)",
    "lib",
    "node_modules"
  ],
  "extension": [
    ".js",
    ".ts",
    ".tsx",
    ".jsx"
  ],
  "include": [
    "packages/**/*.[jt]s?(x)"
  ],
  "per-file": true,
  "report-dir": ".nyc/coverage",
  "reporter": [
    "text-summary",
    "lcov"
  ],
  "require": [
    "esm",
    "./.config/.require.js"
  ],
  "sourceMap": false,
  "temp-dir": ".nyc/output"
}